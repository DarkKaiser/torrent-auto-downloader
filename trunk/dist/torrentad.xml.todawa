<?xml version="1.0" encoding="utf-8"?>
<torrentad>

	<torrentad-ad-service>
		<torrentad-service-config-values>
			<!-- 웹사이트 이름 및 URL -->
			<website-name>토다와</website-name>
			<website-base-url>https://www5.todawa.com</website-base-url>

			<!-- 웹사이트 로그인 정보 -->
			<website-account-id></website-account-id>
			<website-account-password></website-account-password>

			<!-- 다운로드 받은 파일이 저장되는 위치 -->
			<download-file-write-location>/usr/local/torrentad/downloads</download-file-write-location>

			<!-- Task 실행 간격(단위:초) -->
			<task-execute-interval-time-second>3600</task-execute-interval-time-second>
		</torrentad-service-config-values>

		<!-- 주기적으로 토렌트 파일을 다운로드 받는 태스크 -->
		<torrentad-periodic-scheduled-tasks>

			<torrentad-periodic-scheduled-task id="test" description="샘플">
				<!-- 게시판 이름 -->
				<board-name>ent</board-name>

				<!-- 게시물 제목 검색키워드 -->
				<search-keywords type="title">
					<!--
					  검색키워드는 AND 연산으로 처리되며, 등록된 모든 검색키워드가 포함되어 있는 게시물만이 검색된다.
					  검색키워드 자식 태그의 항목이 다수일 경우에는, 다수의 항목 중 하나의 항목만 포함되어 있어도 게시물이 검색된다.
					-->
					<search-keyword>
						<!-- 항목의 '+' 문자는 AND 연산으로 처리된다. -->
						<item>SAMPLE+SAMPLE+SAMPLE</item>
					</search-keyword>
					<!--
					<search-keyword mode="exclude">
						<item></item>
					</search-keyword>
					-->
				</search-keywords>
				
				<!-- 게시물 첨부파일 검색키워드 -->
				<search-keywords type="file">
					<!--
					  검색키워드는 AND 연산으로 처리되며, 등록된 모든 검색키워드가 포함되어 있는 게시물만이 검색된다.
					  검색키워드 자식 태그의 항목이 다수일 경우에는, 다수의 항목 중 하나의 항목만 포함되어 있어도 게시물이 검색된다.
					-->
					<!--
					<search-keyword>
						<!- - 항목의 '+' 문자는 AND 연산으로 처리된다. - - >
						<item></item>
					</search-keyword>
					-->
				</search-keywords>
			</torrentad-periodic-scheduled-task>

			<torrentad-periodic-scheduled-task id="dramas" description="드라마's">
