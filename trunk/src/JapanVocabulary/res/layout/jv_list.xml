<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
		<LinearLayout
			android:id="@+id/vocabulary_info_area"
		    android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_gravity="center"
		    >
			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@drawable/vocabulary_info_bar"
				android:stretchColumns="2"
				android:padding="3px"
				>
				<TableRow>
				    <TextView
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:textColor="#cccccc"
				    	android:layout_gravity="right"
				    	android:text="전체단어 : "
				    	/>
				    <TextView
				    	android:id="@+id/all_vocabulary_count"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:layout_gravity="right"
				    	android:textColor="#cccccc"
				    	/>
				    <TextView
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	/>
				    <TextView
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:textColor="#cccccc"
				    	android:text="전체암기대상 : "
				    	/>
				    <TextView
				    	android:id="@+id/memorize_target_count"
				    	android:layout_width="fill_parent"
				    	android:layout_height="wrap_content"
				    	android:layout_gravity="right"
				    	android:textColor="#cccccc"
				    	/>
				</TableRow>
				<TableRow>
				    <TextView
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:textColor="#cccccc"
				    	android:layout_gravity="right"
				    	android:text="검색된단어 : "
				    	/>
				    <TextView
				    	android:id="@+id/search_vocabulary_count"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:layout_gravity="right"
				    	android:textColor="#cccccc"
				    	/>
				    <TextView
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	/>
				    <TextView
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:textColor="#cccccc"
				    	android:text="전체암기완료 : "
				    	/>
				    <TextView
				    	android:id="@+id/memorize_completed_count"
				    	android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:layout_gravity="right"
				    	android:textColor="#cccccc"
				    	/>
				</TableRow>
			</TableLayout>
			<TextView
				android:id="@android:id/empty"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="표시 될 단어가 없습니다."
				android:layout_gravity="center"
				android:textColor="#cccccc"
				/>
		</LinearLayout>
		<ListView
			android:id="@android:id/list"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			/>
	</LinearLayout>
	<SlidingDrawer
		android:id="@+id/search_sliding_drawer"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:handle="@+id/sd_handle"
		android:content="@+id/sd_content"
		android:orientation="vertical"
		android:animateOnClick="true"
		>
		<ImageView
			android:id="@+id/sd_handle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/sd_handle"
			android:padding="0px"
			/>
		<LinearLayout
			android:id="@+id/sd_content"
			android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#0a0a0a"
		    android:clickable="true"
		    >
			<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				>
				<LinearLayout 
					android:id="@+id/sc_area_head"
					android:layout_width="fill_parent"
				    android:layout_height="3px"
				    android:background="#6b696b"
					/>
				<LinearLayout
					android:id="@+id/sc_area_tail" 
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					>
					<TableLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:background="@android:drawable/bottom_bar"
						android:stretchColumns="*"
						android:gravity="center"
						android:paddingTop="4px"
						android:paddingLeft="4px"
						android:paddingRight="4px"
						>
						<TableRow>
						 	<Button
								android:id="@+id/search_start" 
								android:layout_width="fill_parent" 
								android:layout_height="wrap_content"
						 		android:text="검색" 
								/>
						 	<Button
								android:id="@+id/search_cancel" 
								android:layout_width="fill_parent" 
								android:layout_height="wrap_content"
						 		android:text="취소" 
								/>
						</TableRow>
					</TableLayout>
				</LinearLayout>
				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:layout_below="@id/sc_area_head"
					android:layout_above="@id/sc_area_tail"
					>
					<ScrollView
						android:orientation="vertical"
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						>
						<LinearLayout
							android:orientation="vertical"
						    android:layout_width="fill_parent"
						    android:layout_height="wrap_content"
						    android:padding="10dp"
						    >
							<TableLayout
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:stretchColumns="*"
								>
								<TableRow
									android:paddingBottom="10px"
									>
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="입력하신 검색어를 이용하여 단어의 뜻을 검색합니다. 입력된 내용이 없으면 전체를 검색 대상으로 합니다."
										android:textColor="#cccccc"
										android:textSize="6pt"
										/>
								</TableRow>
								<TableRow
									android:paddingBottom="27px"
									>
									<EditText
										android:id="@+id/sc_search_word" 
										android:hint="검색어를 입력하세요."
										android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="10dp"
										/>
								</TableRow>
								<TableRow
									android:paddingBottom="10px"
									>
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="암기대상, 암기완료 상태의 단어 검색 방법을 선택합니다."
										android:textColor="#cccccc"
										android:textSize="6pt"
										/>
								</TableRow>
								<TableRow>
									<Spinner
										android:id="@+id/sc_memorize_target" 
										android:layout_width="fill_parent" 
										android:layout_height="wrap_content"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="10dp"
										/>
								</TableRow>
								<TableRow
									android:paddingBottom="27px"
									>
									<Spinner
										android:id="@+id/sc_memorize_completed" 
										android:layout_width="fill_parent" 
										android:layout_height="wrap_content"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="10dp"
										/>
								</TableRow>
								<TableRow
									android:paddingBottom="10px"
									>
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="단어가 등록된 날짜의 검색 범위를 선택합니다."
										android:textColor="#cccccc"
										android:textSize="6pt"
										/>
								</TableRow>
								<TableRow>
									<TableLayout
										android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:stretchColumns="0,2"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="10dp"
										>
										<TableRow>
											<Button  
												android:id="@+id/sc_first_search_date"
												android:layout_width="fill_parent"
												android:layout_height="wrap_content"
												android:enabled="false" 
												/>
											<TextView
												android:text="부터  "
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:textColor="#cccccc"
												android:textSize="6pt"
												/>
											<Button  
												android:id="@+id/sc_last_search_date"
												android:layout_width="fill_parent"
												android:layout_height="wrap_content"
												android:enabled="false"
												/>
											<TextView
												android:text="까지"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:textColor="#cccccc"
												android:textSize="6pt"
												/>
										</TableRow>
									</TableLayout>
								</TableRow>
								<TableRow
									android:paddingBottom="27px"
									>
									<LinearLayout
									    android:layout_width="fill_parent"
									    android:layout_height="wrap_content"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="10dp"
										android:gravity="right"
									    >
										<CheckBox
											android:id="@+id/sc_all_reg_date_search"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:text="모든 등록일 검색"
											android:textColor="#cccccc"
											android:textSize="6pt"
											android:checked="true"
											/>
									</LinearLayout>
								</TableRow>
								<TableRow
									android:paddingBottom="10px"
									>
									<TextView
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="JLPT 급수를 선택합니다. 선택된 항목이 없으면 전체를 검색 대상으로 합니다."
										android:textColor="#cccccc"
										android:textSize="6pt"
										/>
								</TableRow>
								<TableRow
									android:paddingBottom="0px"
									>
									<Button
										android:id="@+id/sc_jlpt_level"
										android:layout_width="fill_parent"
										android:layout_height="wrap_content"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="10dp"
										/>
								</TableRow>
							</TableLayout>
						</LinearLayout>
					</ScrollView>
				</LinearLayout>
			</RelativeLayout>
		</LinearLayout>
	</SlidingDrawer>  
</FrameLayout>