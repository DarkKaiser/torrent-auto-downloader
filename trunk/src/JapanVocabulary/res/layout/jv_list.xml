<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<LinearLayout
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
		<LinearLayout
		    android:orientation="horizontal"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
		    <TextView
		    	android:id="@+id/search_info"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:singleLine="true"
		    	android:layout_alignParentLeft="true"/>
		    <TextView
		    	android:id="@+id/vocabulary_count"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:singleLine="true"
		    	android:minWidth="40px"
		    	android:layout_alignParentRight="true"/>
		</LinearLayout>
		<ListView
			android:id="@android:id/list"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"/>
		<TextView
			android:id="@android:id/empty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="표시 될 단어가 없습니다."
			android:layout_gravity="center"/>
	</LinearLayout>
	<SlidingDrawer
		android:id="@+id/drawer_landscape"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:handle="@+id/handle_l"
		android:content="@+id/content"
		android:orientation="vertical"
		android:visibility="visible"
		>
		<ImageView
			android:id="@+id/handle_l"
			android:layout_height="50px"
			android:layout_width="64px"
			android:padding="0px"
			android:src="@drawable/icon"
			/>
		<LinearLayout
			android:id="@+id/content"
			android:orientation="vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="#000000"
		    >
			<ScrollView
				android:fillViewport="true"
				android:orientation="vertical"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				>
				<LinearLayout
					android:orientation="vertical"
				    android:layout_width="fill_parent"
				    android:layout_height="fill_parent"
				    >
					<LinearLayout
						android:orientation="vertical" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="검색어를 입력하세요."
							android:textColor="#ffffff"
							android:textSize="7pt"
							android:layout_marginBottom="4dp"
							/>
						<EditText
							android:id="@+id/search_word" 
							android:hint="검색어(한자 뜻)를 입력하세요."
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							/>
					</LinearLayout>					
					<LinearLayout
						android:orientation="vertical" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="암기완료와 암기대상을 지정합니다."
							android:textColor="#ffffff"
							android:textSize="7pt"
							android:layout_marginBottom="4dp"
							/>
						<TableLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:stretchColumns="*"
							android:layout_marginLeft="10dp"
							>
							<TableRow>
								<Spinner
									android:id="@+id/memorize_completed_spinner" 
									android:layout_width="fill_parent" 
									android:layout_height="wrap_content"
									/>
								<Spinner
									android:id="@+id/memorize_target_spinner" 
									android:layout_width="fill_parent" 
									android:layout_height="wrap_content"
									/>
							</TableRow>
						</TableLayout>
					</LinearLayout>					
					<LinearLayout
						android:orientation="vertical" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						>
						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="단어 등록일의 검색 범위를 선택합니다."
							android:textColor="#ffffff"
							android:textSize="7pt"
							android:layout_marginBottom="4dp"
							/>
						<TableLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:stretchColumns="0,2"
							android:layout_marginLeft="10dp"
							>
							<TableRow>
								<Button  
									android:id="@+id/search_date_first"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content"
									android:enabled="false" 
									/>
								<TextView
									android:text="부터"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									/>
								<Button  
									android:id="@+id/search_date_last"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content"
									android:enabled="false"
									/>
								<TextView
									android:text="까지"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									/>
							</TableRow>
						</TableLayout>
						<CheckBox
							android:id="@+id/all_registration_date_search"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="right|top"
							android:text="모든 등록일의 단어 검색"
							android:checked="true"
							/>
					</LinearLayout>
					<LinearLayout
						android:orientation="vertical" 
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						>
						<TableLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:stretchColumns="*"
							android:layout_marginLeft="10dp"
							>
							<TableRow>
								<Button
									android:text="품사를 선택합니다."
									android:layout_width="fill_parent"
									android:layout_height="wrap_content"
									/>
								<Button
									android:text="JLPT"
									android:layout_width="fill_parent"
									android:layout_height="wrap_content"
									/>
							</TableRow>
						</TableLayout>
					</LinearLayout>					
					<RelativeLayout
					    android:layout_width="fill_parent"
					    android:layout_height="fill_parent"
					    android:layout_marginTop="10dp"
					    >
						<TableLayout
							android:stretchColumns="*"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:layout_alignParentRight="true"
							android:layout_alignParentBottom="true"
							android:background="@android:drawable/bottom_bar"
							android:gravity="center_vertical"
							android:paddingTop="4px"
							android:paddingLeft="4px"
							android:paddingRight="4px"
							>
							<TableRow>
							 	<Button
									android:id="@+id/search_start" 
									android:layout_width="fill_parent" 
									android:layout_height="wrap_content"
							 		android:text="검색" 
									/>
							 	<Button
									android:id="@+id/search_cancel" 
									android:layout_width="fill_parent" 
									android:layout_height="wrap_content"
							 		android:text="취소" 
									/>
							</TableRow>
						</TableLayout>
					</RelativeLayout>
				</LinearLayout>
			</ScrollView>
		</LinearLayout>
	</SlidingDrawer>  
</FrameLayout>