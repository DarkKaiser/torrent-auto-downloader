<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView 
		android:id="@+id/jv_info"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:gravity="right"
    	android:textSize="15dp"
    	/>
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
		<RelativeLayout
			android:id="@+id/memorize_progress_about" 
		    android:layout_width="fill_parent"
		    android:layout_height="5px"
			android:layout_alignParentBottom="true"
		    android:background="#ff0000"
		    >
			<TextView 
		    	android:layout_width="100px" 
		    	android:layout_height="wrap_content"
		    	android:background="#0000ff"
		    	/>
		</RelativeLayout>
	 	<Button
			android:id="@+id/next_vocabulary" 
			android:layout_width="fill_parent" 
			android:layout_height="60dp"
			android:layout_alignParentRight="true"
	    	android:layout_above="@id/memorize_progress_about"
	 		android:text="다음 단어 >>" 
			android:textSize="15dp"
			/>
		<TextView
			android:id="@+id/memorize_method_info" 
	    	android:layout_width="fill_parent" 
	    	android:layout_height="wrap_content"
	    	android:layout_above="@id/next_vocabulary"
	    	android:gravity="center"
	    	android:text="암기 완료 단어는 화면을 꾸~욱 눌러주세요." 
	    	android:textSize="13dp"
	    	android:textColor="#99999999"
	    	/>
	    <RelativeLayout
	    	android:id="@+id/vocabulary_container"
	    	android:layout_width="fill_parent"
	    	android:layout_height="fill_parent"
	    	android:layout_below="@id/jv_info"
	    	android:layout_above="@id/memorize_method_info"
	    	>
			<TextSwitcher
				android:id="@+id/vocabulary"
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content"
		    	android:layout_centerInParent="true"
		    	/>
			<TextSwitcher
				android:id="@+id/vocabulary_translation"
		    	android:layout_width="fill_parent" 
		    	android:layout_height="wrap_content"
		    	android:layout_below="@id/vocabulary"
		    	android:layout_centerInParent="true"
		    	/>
	    </RelativeLayout>
	</RelativeLayout>
</LinearLayout>