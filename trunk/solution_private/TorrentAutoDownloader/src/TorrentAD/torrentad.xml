	</torrentad-config-values>

	<torrentad-ad-service>
	
		<!-- 주기적으로 토렌트 파일을 다운로드 받는 태스크 -->
		<torrentad-periodic-tasks>
			<torrentad-periodic-task id="abc123">
				<!-- 게시판 이름 -->
				<board-name>newmovie</board-name>

				<!-- 게시물 제목 검색키워드 -->
				<search-keywords type="title">
					<!--
					  검색키워드는 AND 연산으로 처리되며, 등록된 모든 검색키워드가 포함되어 있는 게시물만이 검색된다.
					  검색키워드 자식 태그의 항목이 다수일 경우에는, 다수의 항목 중 하나의 항목만 포함되어 있어도 게시물이 검색된다.
					-->
					<search-keyword>
						<!-- 항목의 '+' 문자는 AND 연산으로 처리된다. -->
						<item>캡틴+아메리카</item>
					</search-keyword>
					<search-keyword>
						<item>1080P</item>
					</search-keyword>
					<search-keyword mode="exclude">
						<item>720P</item>
						<item>IMAX</item>
					</search-keyword>
					<search-keyword>
						<item>AMIABLE</item>
					</search-keyword>
				</search-keywords>
				
				<!-- 게시물 첨부파일 검색키워드 -->
				<search-keywords type="file">
					<!--
					  검색키워드는 AND 연산으로 처리되며, 등록된 모든 검색키워드가 포함되어 있는 게시물만이 검색된다.
					  검색키워드 자식 태그의 항목이 다수일 경우에는, 다수의 항목 중 하나의 항목만 포함되어 있어도 게시물이 검색된다.
					-->
					<!--
					<search-keyword>
						<!- - 항목의 '+' 문자는 AND 연산으로 처리된다. - - >
						<item></item>
					</search-keyword>
					-->
				</search-keywords>
			</torrentad-periodic-task>
		</torrentad-periodic-tasks>

		<!-- 오직 한번만 토렌트 파일을 다운로드 받는 태스크 -->
		<torrentad-once-tasks>
			<torrentad-once-task/>
		</torrentad-once-tasks>
		
	</torrentad-ad-service>

</torrentad>
