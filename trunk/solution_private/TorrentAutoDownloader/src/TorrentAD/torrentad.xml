		<!-- 다운로드 받은 파일이 저장되는 위치 -->
		<download-file-write-location>d:\temp</download-file-write-location>

		<!-- Task 실행 간격(단위:초) -->
		<task-execute-interval-time-second>60</task-execute-interval-time-second>
		
		<!-- @@@@@ 프로그램 설정정보를 ad-service 안에 두는건? 각 서비스안에 설정정보를 둔다??? 테스트 해보기 -->
		<!-- FTP 서버 로그인 정보 -->
		<ftp-account-id>darkkaiser</ftp-account-id>
		<ftp-account-password>+6NAeVw5G14OGc9FEcGIm7YuCHGyOMupk7djkuJJyO4=</ftp-account-password>

		<!-- 토렌트 서버 로그인 정보 -->
		<torrent-account-id>darkkaiser</torrent-account-id>
		<torrent-account-password>+6NAeVw5G14OGc9FEcGIm7YuCHGyOMupk7djkuJJyO4=</torrent-account-password>

		<!-- 토렌트 서버로 올릴 파일들이 생성되는 경로, 해당 폴더에 생성되는 파일들은 모두 토렌트 서버로 업로드된다. -->
