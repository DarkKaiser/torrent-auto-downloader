<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/avsl_vocabulary_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <!-- @@@@@ 패널 배경 고민 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#99333333"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            >
            <TextView
                android:id="@+id/avsl_vocabulary_count_info_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/avsl_vocabulary_count_info_description"
                android:textColor="#cccccc"
                android:textSize="11dp"
                tools:ignore="SpUsage"
                />
            <TextView
                android:id="@+id/avsl_vocabulary_count_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/avsl_vocabulary_count_info_description"
                android:text="@null"
                android:textColor="#cccccc"
                android:textSize="11dp"
                tools:ignore="RelativeOverlap,SpUsage"
                />
            <TextView
                android:id="@+id/avsl_vocabulary_memorize_count_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@null"
                android:textColor="#cccccc"
                android:textSize="11dp"
                tools:ignore="SpUsage"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/avsl_vocabulary_memorize_count_info"
                android:text="@string/avsl_vocabulary_memorize_count_info_description"
                android:textColor="#cccccc"
                android:textSize="11dp"
                tools:ignore="RelativeOverlap,SpUsage"
                />
        </RelativeLayout>
        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:text="@string/avsl_empty_search_result_list_vocabulary"
            android:textColor="#cccccc"
            android:textSize="13dp"
            tools:ignore="SpUsage"
            />
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="false"
        tools:ignore="UnusedAttribute"
        />
</LinearLayout>
