<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/avsl_vocabulary_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/avsl_vocabulary_count_info_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="@null"
            android:textColor="#cccccc"
            android:textSize="@dimen/text_size_micro"
            tools:ignore="SpUsage"
            />
        <TextView
            android:id="@+id/avsl_vocabulary_count_info_description2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="3dp"
            android:text="@null"
            android:textColor="#cccccc"
            android:textSize="@dimen/text_size_micro"
            tools:ignore="SpUsage"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#313031"
            />
        <TextView
            android:id="@android:id/empty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:paddingTop="5dp"
            android:text="@string/avsl_empty_search_result_list_vocabulary"
            android:textColor="#cccccc"
            android:textSize="@dimen/text_size_medium"
            tools:ignore="SpUsage"
            />
    </LinearLayout>
    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:smoothScrollbar="true"
        android:scrollingCache="false"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="false"
        tools:ignore="UnusedAttribute"
        />
</LinearLayout>
