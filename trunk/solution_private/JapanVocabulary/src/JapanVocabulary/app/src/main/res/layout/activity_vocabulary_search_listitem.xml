<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
   	android:layout_width="match_parent"
   	android:layout_height="wrap_content"
	>
	<TextView
   		android:id="@+id/avsli_memorize_bar"
		android:layout_width="2dp"
		android:layout_height="match_parent"
		android:background="@drawable/avsli_unmemorize_bar"
		/>
    <!-- @@@@@ -->
	<LinearLayout
		android:id="@+id/memorize_bg"
		android:orientation="vertical"
	   	android:layout_width="match_parent"
	   	android:layout_height="wrap_content"
	   	android:paddingLeft="5px"
	   	android:paddingTop="2px"
	   	android:paddingRight="2px"
	   	android:paddingBottom="2px"
		>
		<RelativeLayout 
		   	android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
			<TextView 
				android:id="@+id/avsli_vocabulary"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:typeface="serif"
				android:singleLine="true"
				android:textColor="#ffffff"
				android:textSize="13dp"
                tools:ignore="SpUsage"
                />
            <TextView
                android:id="@+id/avsli_memorize_completed_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:typeface="serif"
                android:singleLine="true"
                android:textColor="@color/avsli_memorize_completed_count"
                android:textSize="13dp"
                tools:ignore="SpUsage"
                />
			<TextView
				android:id="@+id/avsli_vocabulary_gana"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/avsli_vocabulary"
				android:typeface="serif"
				android:singleLine="true"
				android:textColor="#ffffff"
				android:textSize="13dp"
                tools:ignore="SpUsage"
				/>
			<TextView 
				android:id="@+id/avsli_vocabulary_translation"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_below="@id/avsli_vocabulary_gana"
				android:typeface="serif"
				android:singleLine="true"
				android:textColor="#ffffff"
				android:textSize="13dp"
                tools:ignore="SpUsage"
				/>
			<CheckBox
				android:id="@+id/avsli_memorize_completed"
		        android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_alignParentRight="true"
	    	    android:layout_below="@id/avsli_vocabulary_translation"
	    	    android:gravity="center_vertical"
	        	android:typeface="serif"
				android:singleLine="true"
                android:textColor="#ffffff"
                android:textSize="13dp"
	        	android:text="암기완료"
	        	android:background="#00000000"
                android:button="@drawable/custom_checkbox"
	    	    android:focusable="false"
                tools:ignore="SpUsage"
	        	/>
			<CheckBox
				android:id="@+id/avsli_memorize_target"
		        android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_toLeftOf="@id/avsli_memorize_completed"
	    	    android:layout_below="@id/avsli_vocabulary_translation"
	    	    android:gravity="center_vertical"
	        	android:typeface="serif"
				android:singleLine="true"
				android:textColor="#ffffff"
	        	android:textSize="13dp"
	        	android:text="암기대상"
	        	android:background="#00000000"
                android:button="@drawable/custom_checkbox"
	    	    android:focusable="false"
	        	android:paddingRight="10dp"
                tools:ignore="SpUsage"
	        	/>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>
