<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   	android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/avsli_vocabulary_memorize_bar"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:background="@color/avsli_vocabulary_memorize_completed_bar"
        />
    <RelativeLayout
        android:id="@+id/avsli_vocabulary_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:paddingBottom="0dp"
        >
        <TextView
            android:id="@+id/avsli_vocabulary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:typeface="serif"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="13dp"
            tools:ignore="SpUsage"
            />
        <TextView
            android:id="@+id/avsli_vocabulary_memorize_completed_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:typeface="serif"
            android:singleLine="true"
            android:textColor="@color/avsli_vocabulary_memorize_completed_count"
            android:textSize="13dp"
            tools:ignore="SpUsage"
            />
        <TextView
            android:id="@+id/avsli_vocabulary_gana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/avsli_vocabulary"
            android:typeface="serif"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="13dp"
            tools:ignore="SpUsage"
            />
        <TextView
            android:id="@+id/avsli_vocabulary_translation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/avsli_vocabulary_gana"
            android:typeface="serif"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="13dp"
            tools:ignore="SpUsage"
            />
        <!-- @@@@@ -->
        <CheckBox
            android:id="@+id/avsli_vocabulary_memorize_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/avsli_vocabulary_translation"
            android:gravity="center_vertical"
            android:typeface="serif"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:text="암기완료"
            android:background="#00000000"
            android:button="@drawable/custom_checkbox"
            android:focusable="false"
            tools:ignore="SpUsage"
            />
        <!-- @@@@@ -->
        <CheckBox
            android:id="@+id/avsli_vocabulary_memorize_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/avsli_vocabulary_memorize_completed"
            android:layout_below="@id/avsli_vocabulary_translation"
            android:gravity="center_vertical"
            android:typeface="serif"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="13dp"
            android:text="암기대상"
            android:background="#00000000"
            android:button="@drawable/custom_checkbox"
            android:focusable="false"
            android:paddingRight="10dp"
            tools:ignore="SpUsage"
            />
    </RelativeLayout>
</LinearLayout>
