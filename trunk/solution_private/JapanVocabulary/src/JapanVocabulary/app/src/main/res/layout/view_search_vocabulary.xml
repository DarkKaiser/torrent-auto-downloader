<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:scrollbarStyle="insideOverlay"
   	>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        android:padding="10dp"
        >
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@string/avsl_search_condition_search_word"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:gravity="right"
                />
            <EditText
                android:id="@+id/avsl_search_condition_search_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/avsl_search_condition_search_word_hint"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@string/avsl_search_condition_memorize_target"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:gravity="right"
                />
            <Spinner
                android:id="@+id/avsl_search_condition_memorize_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/avsl_search_condition_select_text"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@null"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:gravity="right"
                />
            <Spinner
                android:id="@+id/avsl_search_condition_memorize_completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/avsl_search_condition_select_text"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="@string/avsl_search_condition_jlpt_rating"
                android:paddingLeft="0dp"
                android:paddingRight="5dp"
                android:gravity="right"
                />
            <kr.co.darkkaiser.jv.view.widgets.MultiChoiceSpinner
                android:id="@+id/avsl_search_condition_jlpt_ranking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/avsl_search_condition_select_text"
                />
        </TableRow>
    </TableLayout>
</ScrollView>
