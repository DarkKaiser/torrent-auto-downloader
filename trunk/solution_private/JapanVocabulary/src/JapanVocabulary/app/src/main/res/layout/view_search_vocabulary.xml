<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
   	android:layout_height="match_parent"
   	android:scrollbarStyle="insideOverlay"
   	>
    <!-- @@@@@ -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="2"
        android:padding="5px"
        >
        <TableRow
            android:paddingBottom="27px"
            >
            <EditText
                android:id="@+id/avsl_search_condition_search_word"
                android:hint="검색어를 입력하세요."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </TableRow>
        <TableRow>
            <Spinner
                android:id="@+id/avsl_search_condition_memorize_target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/avsl_search_condition_text"
                />
        </TableRow>
        <TableRow
            android:paddingBottom="27px"
            >
            <Spinner
                android:id="@+id/avsl_search_condition_memorize_completed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/avsl_search_condition_text"
                />
        </TableRow>
        <TableRow
            android:paddingBottom="0px"
            >
            <kr.co.darkkaiser.jv.view.MultiChoiceSpinner
                android:id="@+id/avsl_jlpt_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/avsl_search_condition_text"
                />
            <Button
                android:id="@+id/sc_jlpt_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </TableRow>
    </TableLayout>
</ScrollView>
