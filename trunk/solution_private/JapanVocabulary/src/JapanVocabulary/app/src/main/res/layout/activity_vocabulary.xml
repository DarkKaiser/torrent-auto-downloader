    <RelativeLayout
        android:id="@+id/jv_main_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vocabulary_info_bar"
        android:gravity="bottom"
        android:visibility="invisible"
        >
        <TextView
            android:id="@+id/av_memorize_completed_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="15dp"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/av_memorize_vocabulary_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
        <SeekBar
            android:id="@+id/av_vocabulary_seekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxHeight="8dp"
            android:minHeight="8dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:progressDrawable="@drawable/custom_seekbar"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/btn_prev_vocabulary"
            android:layout_width="42dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/av_prev_vocabulary"
            android:textSize="15dp"
            tools:ignore="SpUsage"
            />
        <Button
            android:id="@+id/btn_next_vocabulary"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_prev_vocabulary"
            android:text="@string/av_next_vocabulary"
            android:textSize="15dp"
            tools:ignore="SpUsage"
            />
        <TextView
            android:id="@+id/memorize_method_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_next_vocabulary"
            android:gravity="center"
            android:text="@string/av_memorize_method_info"
            android:textColor="#99999999"
            android:textSize="13dp"
            tools:ignore="SpUsage"
            />
        <RelativeLayout
            android:id="@+id/vocabulary_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/memorize_method_info"
            android:layout_below="@id/av_vocabulary_seekbar"
            >
            <TextSwitcher
                android:id="@+id/av_vocabulary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                />
            <TextSwitcher
                android:id="@+id/av_vocabulary_translation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/av_vocabulary"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
