<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    >
    <com.fsn.cauly.CaulyAdView
        xmlns:app="http://schemas.android.com/apk/res/kr.co.darkkaiser.jc"
        android:id="@+id/xmladview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:appcode="n3PRB2gKP"
        app:effect="RightSlide"
        app:dynamicReloadInterval="true"
        app:reloadInterval="20"
        app:bannerHeight="Fixed"
        />
    <Button
        android:id="@+id/next_character"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_above="@id/xmladview"
        android:text="@string/am_next_character"
        android:textSize="17dp"
        tools:ignore="SpUsage"
        />
    <TextView
        android:id="@+id/character_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/next_character"
        android:gravity="center"
        android:text="@string/am_screen_tab_description"
        android:textSize="12dp"
        android:textColor="@color/am_information_text"
        tools:ignore="SpUsage"
        />
    <RelativeLayout
        android:id="@+id/character_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/character_info"
        >
        <TextView
            android:id="@+id/character"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:textSize="100dp"
            tools:ignore="SpUsage"
            />
        <TextView
            android:id="@+id/character_mean"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/character"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:typeface="serif"
            android:textSize="25dp"
            android:visibility="gone"
            tools:ignore="SpUsage"
            />
    </RelativeLayout>

</RelativeLayout>
