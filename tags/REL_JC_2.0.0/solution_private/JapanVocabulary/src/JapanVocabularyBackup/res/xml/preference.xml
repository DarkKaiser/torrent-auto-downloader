<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
      android:layout="@layout/jv_title_without_button"
      />
    <PreferenceCategory
        android:title="단어 암기 설정"
        >
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="암기 대상"
            android:entries="@array/preference_memorize_target_item_list"
            android:entryValues="@array/preference_memorize_target_itemvalues_list"
            android:key="jv_memorize_target_item"
            android:summary="단어를 암기할 때 암기 대상이 되는(화면에 출력이 되는) 단어의 항목을 선택합니다."
            android:title="암기 대상 설정" 
            />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="jv_show_vocabulary_translation"
            android:summary="암기 대상 단어가 나타나는 아랫부분에 단어의 뜻을 보여줍니다."
            android:title="암기 시 단어 뜻 보이기" 
            />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="jv_fade_effect_next_vocabulary"
            android:summary="다음 암기 대상 단어가 나타날 때 페이드 효과를 적용하여 나타나도록 합니다."
            android:title="단어 전환시 페이드효과 적용" 
            />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="jv_vibrate_next_vocabulary"
            android:summary="다음 암기 대상 단어가 나타날 때 휴대폰에 진동을 발생시킵니다."
            android:title="단어 전환시 진동 발생" 
            />
        <ListPreference
            android:defaultValue="0"
            android:dialogTitle="단어 암기 순서"
            android:entries="@array/preference_memorize_order_method_list"
            android:entryValues="@array/preference_memorize_order_itemvalues_list"
            android:key="jv_memorize_order_method"
            android:summary="암기시에 암기 대상 단어가 화면에 나타나는 순서를 선택합니다."
            android:title="단어 암기 순서" 
            />
    </PreferenceCategory>
    <PreferenceCategory 
        android:title="단어 업데이트 설정" 
        >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="jv_vocabulary_update_on_started"
            android:summary="프로그램 시작시 단어 DB를 최신 버전으로 업데이트 합니다."
            android:title="시작시 단어 업데이트" 
            />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="프로그램 정보"
        >
        <PreferenceScreen
            android:key="jv_program_info"
            android:summary="버전 정보를 확인할 수 없습니다."
            android:title="프로그램 정보" 
            />
        <PreferenceScreen
            android:summary="DarkKaiser(twitter : darkkaiser78)\ndarkkaiser78@hotmail.com"
            android:title="개발자 정보" 
            />
    </PreferenceCategory>
</PreferenceScreen>